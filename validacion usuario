				cout << endl << "-------------------------------------------";
				cout << endl << setw(5) << reg.idusuario << setw(15) << reg.id_tractor << setw(15) << reg.modelo_tractor;
				cout << endl << "-------------------------------------------";
		}
	}
	fclose(ptr);
}
