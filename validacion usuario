//Obtener Posicion - Para modificar y eliminar
bool obtenerCE(int id,string dato)
{
	FILE *ptr;
	usuario reg;
	bool k = false;
	ptr = fopen("Usuarios.dat","rb");
	if(ptr != NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);
		if(id == reg.idusuario)
		{
			if(reg.ce == "E")
			{
				k = true;
			}
		}
	}
	else
	{
		cout << endl << "El archivo no existe";
	}
	fclose(ptr);
	return(k);
}
int obtenerPosicionUsuario(int id)
{
	FILE *ptr;
	usuario reg;
	int cont = 0, pos;
	ptr = fopen("Usuarios.dat","rb");
	if(ptr != NULL)
	{
		fread(&reg,sizeof(reg),1,ptr);
		while(!feof(ptr))
		{
			cont++;
			if(reg.idusuario == id)
			{
				pos = cont;
			}
			fread(&reg,sizeof(reg),1,ptr);
		}
	}
	fclose(ptr);
	return(pos);
}
