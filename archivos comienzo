	cout<<"ingrese una opcion"<<endl;
	cin>>op;
	switch(op)
	{
	case 1:
		{
		add();
		break;
		}
	case 2:
		{
	
		break;
		}

	case 3:
		{
		list();
		break;
		}
	case 4:
		{
		
