void add()
{
	ptr=fopen("producto.dat","ab");

	if(ptr==NULL)
		cout<<"no existe el archivo"<<endl;
	else 
	{
	cin.ignore();
	cout<<"ingrese el codigo del producto"<<endl;
	cin>>reg.codigo;
	cin.ignore();
	cout<<"ingrese la descripcion del producto"<<endl;
	getline(cin,reg.descrip);
	cout<<"ingrese la cantidad"<<endl;
	cin>>reg.cantidad;
	cout<<"ingrese precio"<<endl;
	cin>>reg.precio;
	cin.ignore();
	cout<<"ingrese S si tiene garantia, N si no tiene garantia"<<endl;
	getline(cin,reg.garantia);
	

	fwrite(&reg,sizeof(reg),1,ptr);
	fclose(ptr);

	cout<<"producto registrado"<<endl;
	cout<<"oprima cualquier tecla para continuar"<<endl;
	getch();

	}

}
void add_directo()
{
	int cod,pos;
	cout<<"que codigo desea"<<endl;
	cin>>cod;
	ptr=fopen("producto.dat","wb");

	if(ptr==NULL)
		cout<<"no existe el archivo"<<endl;
	else 
	{
	pos=encontrarpos(cod);
	fseek(ptr,(pos-1)*sizeof(reg),SEEK_SET);
	cin.ignore();
	cout<<"ingrese el codigo del producto"<<endl;
	cin>>reg.codigo;
	cout<<"ingrese la descripcion del producto"<<endl;
	getline(cin,reg.descrip);
	cout<<"ingrese la cantidad"<<endl;
	cin>>reg.cantidad;
	cout<<"ingrese precio"<<endl;
	cin>>reg.precio;
	cout<<"ingrese S si tiene garantia, N si no tiene garantia"<<endl;
	getline(cin,reg.garantia);
	fwrite(&reg,sizeof(reg),1,ptr);
	fclose(ptr);

	cout<<"producto registrado"<<endl;
	cout<<"oprima cualquier tecla para continuar"<<endl;
	getch();

	}

}

int encontrarpos(int cod)
{
	int cont=0;
	ptr=fopen("productos.dat","rb");
	if(ptr==NULL)
		cout<<"no existe el archivo"<<endl;
	else 
	{
		cont++;
		fread(&reg,sizeof(reg),1,ptr);
		while(!feof(ptr)&&cod!=reg.codigo)
		{
		fread(&reg,sizeof(reg),1,ptr);
		cont++;
		}
	}
	return(cont);
}

void list()
{
	FILE *ptr;
	prod reg;
	ptr=fopen("producto.dat","rb");
	if(ptr==NULL)
		cout<<"no existe el archivo"<<endl;
	else 
	{
	cout<< cout<< "\n\rNo Prod       Descripcion      Cantidad       Precio         Garantia"<<endl; 
	cout << "\n\r---------------------------------------------------------------------------"<<endl;
	fread(&reg,sizeof(reg),1,ptr);
	while(!feof(ptr))
	{
	cout<<reg.codigo<<"\t""\t"<<reg.descrip<<"\t""\t"<<reg.cantidad<<"\t""\t"<<reg.precio<<"\t""\t"<<reg.garantia<<endl; 
	fread(&reg,sizeof(reg),1,ptr);
	}
	fclose(ptr);
	}
}
